#!/bin/sh

hour=$(date +%H)
night=21
morning=6
day=12
evening=18

if [ "$night" -lt "$hour" ] && [ "$hour" -gt "$morning" ]; then
    xrandr --output eDP-1 --brightness 0.4
elif [ "$morning" -lt "$hour" ] && [ "$hour" -lt "$day" ]; then
    xrandr --output eDP-1 --brightness 0.6
elif [ "$day" -lt "$hour" ] && [ "$hour" -lt "$evening" ]; then
    xrandr --output eDP-1 --brightness 0.8
elif [ "$evening" -lt "$hour" ] && [ "$hour" -lt "$night" ]; then
    xrandr --output eDP-1 --brightness 0.6
fi
