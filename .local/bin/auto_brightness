#!/bin/sh

hour=$(date +%H)
night=21
morning=6
day=12
evening=18

if [ "$morning" -le "$hour" ] && [ "$hour" -le "$day" ]; then
    xrandr --output eDP-1 --brightness 0.6
elif [ "$day" -le "$hour" ] && [ "$hour" -le "$evening" ]; then
    xrandr --output eDP-1 --brightness 0.8
elif [ "$evening" -le "$hour" ] && [ "$hour" -le "$night" ]; then
    xrandr --output eDP-1 --brightness 0.6
else
    xrandr --output eDP-1 --brightness 0.4
fi
